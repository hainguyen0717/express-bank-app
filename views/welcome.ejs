<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Alfa Banking App</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header text-center">
              <h2>Welcome to Alfa Banking App</h2>
            </div>
            <div class="card-body text-center">
              <h3>Hello, <%= user.username %>!</h3>
              <p>Your bank accounts are listed below:</p>

              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Account Number</th>
                    <th>Balance</th>
                    <th>Account Type</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (accounts && accounts.length > 0) { %> <%
                  accounts.forEach(account => { %>
                  <tr>
                    <td>
                      <a
                        href="/accounts/<%= account.id %>/transactions?username=<%= user.username %>"
                        ><%= account.accountNumber %></a
                      >
                    </td>

                    <td>$<%= account.balance %></td>
                    <td><%= account.accountType %></td>
                  </tr>
                  <% }) %> <% } else { %>
                  <tr>
                    <td colspan="3">No accounts found.</td>
                  </tr>
                  <% } %>
              </tbody>
            </table>

              <form action="/users/<%= user.id %>/accounts" method="POST" class="mt-3">
                <input type="hidden" name="accountType" value="Deposit" />
                <input type="hidden" name="balance" value="1000" />
                <input type="hidden" name="accountNumber" value="<%= Date.now() %>" />
                <button type="submit" class="btn btn-primary">Create Account</button>
              </form>

              <a href="/logout" class="btn btn-secondary mt-3">Logout</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
